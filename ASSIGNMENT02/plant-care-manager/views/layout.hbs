<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{#if title}}{{title}} | {{/if}}Plant Care Manager</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <!-- Tailwind (unprefixed to preserve your current layout) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css" />

  <!-- Patch: make Bootstrap navbar collapse work despite Tailwind's .collapse -->
  <style>
    /* Ensure navbar content isn't hidden by Tailwind's .collapse */
    .navbar .collapse { visibility: visible !important; display: none; }
    .navbar .collapse.show { display: block; }
    @media (min-width: 992px) { /* lg and up => flex as Bootstrap expects */
      .navbar-expand-lg .navbar-collapse { display: flex !important; }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">ðŸŒ¿ Plant Care Manager</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"
        aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/plants">Plants</a></li>
        </ul>

        <!-- RIGHT SIDE AUTH AREA -->
        <ul class="navbar-nav">
          {{#if user}}
            <!-- Show when logged in -->
            <li class="nav-item">
              <a class="nav-link" href="/plants/add">Add Plant</a>
            </li>
            <li class="nav-item">
              <span class="navbar-text me-2">Hi, {{user.username}}</span>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
            </li>
          {{else}}
            <!-- Show when logged out -->
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item ms-2">
              <a class="btn btn-light btn-sm" href="/auth/register">Register</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-3">
    {{#if success}}<div class="alert alert-success">{{success}}</div>{{/if}}
    {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
  </div>

  <!-- Page content -->
  <main class="flex-fill">
    {{{body}}}
  </main>

  <!-- Footer -->
  <footer class="bg-light border-top mt-5 py-3">
    <div class="container text-center small text-muted">
      Â© {{year}} Plant Care Manager Â· Built with Express & MongoDB
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous">
  </script>
</body>
</html>
   